---
interface Props {
  title: string;
  subtitle: string;
  date: string;
  url: string;
  slug: string;
}

const { title, subtitle, date, url, slug } = Astro.props;
---

<div class="box">
  <strong class="block titlebar">
    <div class="f-row">
      <h3 class="flex-grow:1">{title}</h3>
      <p>{date}</p>
    </div>
  </strong>
  <br />
  <div class="f-switch">
    <sub-title class="flex-grow:1">{subtitle}</sub-title>
    <div class="f-row flex-grow:0 center">
      <a class="chip ok" href={`/til/${slug}`}>Blog</a>
      <a class="chip info" href={url}>More</a>
    </div>
  </div>
</div>
