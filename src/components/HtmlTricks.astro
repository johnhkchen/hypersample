---
import FancyTable from "@components/FancyTable.astro";
import Collapse from "@components/Collapse.astro";
---

<h1>HTML Tricks</h1>
<aside>This page contains some useful HTML tricks.</aside>
<hr />
<Collapse title="Text Formatting">
  <p style="text-align: left;">This</p>
  <p style="text-align: center;">Is</p>
  <p style="text-align: right;">Paragraph Alignment</p>
</Collapse>
<hr />
<Collapse title="Flexbox" />
<hr />
<Collapse title="Tables">
  <FancyTable />
</Collapse>
<hr />

<Collapse title="Forms">
  <form class="table rows">
    <p>
      <label for="name">Name</label>
      <input type="text" id="name" name="name" />
    </p>
    <p>
      <label for="adr">Address</label>
      <input type="text" id="adr" name="adr" />
    </p>
  </form>
</Collapse>
<hr />

<Collapse title="Components">
  <div class="box bad">
    <strong class="block titlebar">Error</strong>
    Task failed successfully
  </div>
</Collapse>
<hr />

<Collapse title="HTMX">
  <p>Lorem ipsum</p>
  <button hx-get="/api/clicked" hx-swap="outerHTML"> Click Me </button>
</Collapse>
<hr />
